{
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "node": false,
    "es6": true,
    "browser": false
  },
  "globals": {},
  "rules": {
    "semi": [2, "always"],
    "no-eq-null": 2,
    "no-console": 0,
    "no-multi-spaces": 0,
    "max-len": [
      2, 120, 4,
      {
        "ignoreRegExpLiterals": true,
        "ignoreUrls": true
      }
    ]
  }
}
