{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": false
  },
  "globals": {},
  "rules": {
    "semi": [2, "always"],
    "no-multi-spaces": 1,
    "max-len": ["error", 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": false,
      "ignoreTemplateLiterals": true
    }]
  }
}
